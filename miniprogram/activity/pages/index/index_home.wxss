@import "../../style/skin.wxss";
@import "../../style/client.wxss";

page {
	background-color: #b24444;
}

.main-cc {
	width: 100%;
	padding: 0 !important;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.school-cover1 {
	width: 100%;
	display: flex;
	box-sizing: border-box;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	position: relative;
}

.school-cover1 .title {
	position: absolute;
	color: #fff;
	font-size: 28rpx;
	right: 0rpx;
	padding: 5rpx 10rpx;
	background-color: #b24444;
	bottom: 10rpx;
}

.school-cover1 image {
	width: 100%;
}

.home-line {
	background-color: #B9595B;
	width: 100%;
	height: 10rpx;
}

.home-menu {
	background-color: #b24444;
	margin-top: 10rpx;
	width: 100%;
	padding: 40rpx 30rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}

.home-menu-ex {
	margin: 20rpx;
	padding: 15rpx;
	background-color: #B9595B;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.home-menu-item {
	background-color: rgb(49, 43, 43);
	width: 200rpx;
	height: 200rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.home-menu-item image {
	width: 80rpx;
	height: 80rpx;
}

.home-menu-item text {
	margin-top: 20rpx;
	color: #fff;
}